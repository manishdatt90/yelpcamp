<%- include("../partials/header.ejs") %>
<h1 style="text-align: center;">
	Edit Campground
</h1>
<div class="raw">
	<div class="col-md-4 col-md-offset-4">
		
	
<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
	<div class="form-group">
		
	<input class="form-control" style="margin:10px;" type="text" value="<%= campground.name %>" name="campground[name]">
	<input class="form-control" style="margin:10px;" type="number" value="<%= campground.price %>" name="campground[price]" min="0.01" step="0.01">
	<input class="form-control" style="margin:10px;" type="text" value="<%= campground.url %>" name="campground[url]">
		<input class="form-control" style="margin:10px;" type="text" value="<%= campground.description %>" name="campground[description]">
	<button style="margin:10px; width:100%" class=" btn btn-primary">
		submit
	</button>
		</div>	
</form>
<a style="margin:10px;" href="/campgrounds">Back</a>
